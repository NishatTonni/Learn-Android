<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d6ffe8"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageViewId"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/quizlogo"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        >
    </ImageView>
    <LinearLayout
        android:id="@+id/loginPageLayoutId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:gravity="center">

        <TextView
            android:id="@+id/loginWithTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login With"
            android:textSize="20sp"
            android:textStyle="bold"
            >
        </TextView>

        <Button
            android:id="@+id/facebookButtonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FACEBOOK"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            >
        </Button>

        <Button
            android:id="@+id/googleButtonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="google"
            android:textStyle="bold"
            android:textSize="20sp"
        android:layout_marginTop="15dp"
        >
    </Button>

    <TextView
        android:id="@+id/orTextViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        >
    </TextView>

    <Button
        android:id="@+id/playAsGuestButtonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="play as guest"
        android:textStyle="bold"
        android:textSize="20sp"
        >

    </Button>
</LinearLayout>

<LinearLayout
    android:id="@+id/guestLoginPageLayoutId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone">

    <EditText
        android:id="@+id/nickNameEditTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a Nickname"
        android:textColor="#ffffff"
        android:textSize="20sp"
        >
    </EditText>

    <Button
        android:id="@+id/startButtonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        >

    </Button>

</LinearLayout>



</LinearLayout>